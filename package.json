  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sebastian-software/app-manifest-loader.git"
  },
  "author": {
    "name": "Sebastian Software",
    "email": "s.werner@sebastian-software.de",
    "url": "https://www.sebastian-software.de"
  },
  "engines": {
    "node": ">=6.0.0",
    "yarn": ">=1.0.0",
    "npm": ">=4.0.0"
  },
  "pre-commit": "lint-staged",
  "license": "MIT",
  "homepage": "https://github.com/sebastian-software/app-manifest-loader",
  "jest": {
    "testRegex": "test/index.js"
  },
  "peerDependencies": {
    "webpack": ">=4.0.0",
    "file-loader": ">1.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.46",
    "@babel/core": "^7.0.0-beta.46",
    "babel-core": "^7.0.0-bridge.0",
    "babel-preset-edge": "^3.3.0",
    "eslint-config-readable": "^1.11.1",
    "file-loader": "^1.1.11",
    "glob": "^7.1.2",
    "jest": "^22.4.3",
    "preppy": "^4.2.2",
    "prettier": "^1.12.1",
